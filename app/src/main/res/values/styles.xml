<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#fff</item>
        <item name="android:radius">10dp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="TextMessage">
        <item name="android:textColor">#A9B0BB</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="TextLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="TextMedium">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="TextSmall">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:src">@drawable/ic_baseline_arrow_drop_down_24</item>
    </style>

    <style name="TextTitle" parent="@style/TextLarge">
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">33dp</item>
    </style>
</resources>